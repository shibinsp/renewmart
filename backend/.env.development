# Development Environment Configuration
# This file is used for local development
# Set RENEWMART_ENV=development to use these settings (default)

# Environment
RENEWMART_ENV=development
ENVIRONMENT=development

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=true
RELOAD=true

# Security (development values - not for production)
SECRET_KEY=dev-secret-key-not-for-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (local development database)
DATABASE_URL=postgresql://postgres:shibin@localhost:5432/renew
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=renew
DATABASE_USER=postgres
DATABASE_PASSWORD=shibin

# CORS (allow local development servers)
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:4028", "http://127.0.0.1:3000", "http://127.0.0.1:4028"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/renewmart.log
ACCESS_LOG_FILE=logs/renewmart_access.log
ERROR_LOG_FILE=logs/renewmart_errors.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=[".pdf", ".doc", ".docx", ".jpg", ".jpeg", ".png"]